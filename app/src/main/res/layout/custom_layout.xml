<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_news"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="2"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/news_imageview"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".5"
                android:layout_gravity="center"/>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:weightSum="3"
                android:layout_weight="1.5"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/news_title"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:text="Up to 75 Cashback"
                    android:textSize="17dp"
                    android:maxLines="2"
                    android:layout_weight="1"
                    android:textColor="@color/colorPrimaryDark"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/news_subtitle"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_below="@+id/textView"
                    android:layout_marginTop="4dp"
                    android:lines="3"
                    android:layout_weight="1.5"
                    android:text="On all recharges above 200"
                    android:textColor="#9C000000" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:orientation="horizontal"
                    android:layout_weight=".5"
                    android:weightSum="2">


                    <TextView
                        android:id="@+id/news_publisher"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_weight="1"
                        android:text="Breakly's"
                        android:textColor="#8C8C8C" />

                    <TextView
                        android:id="@+id/news_publisherdate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_weight="1"
                        android:text="24/12/2019"
                        android:textColor="#8C8C8C" />

                </LinearLayout>


            </LinearLayout>
        </LinearLayout>


    </androidx.cardview.widget.CardView>


</RelativeLayout>
